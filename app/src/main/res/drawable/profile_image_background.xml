<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ombre -->
    <item >
        <shape
            android:shape="oval">
            <solid android:color="#B00020"/> <!-- Couleur de l'ombre -->
            <corners android:radius="50dp"/>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>

    <!-- Forme circulaire pour la photo de profil -->
    <item android:right="1dp" android:top="1dp" android:left="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Couleur de fond, généralement blanche pour contraster avec l'ombre -->
        </shape>
    </item>

</layer-list>
